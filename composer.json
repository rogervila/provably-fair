{
    "name": "rogervila/provably-fair",
    "description": "PHP implementation of Bustabit's Provably Fair system",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "provably fair"
    ],
    "authors": [
        {
            "name": "Roger Vil√†",
            "email": "rogervila@me.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "rogervila/php-sonarqube-scanner": "^1.1.0",
        "squizlabs/php_codesniffer": "^3.7 || ^4.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "ProvablyFair\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProvablyFairTests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "composer validate",
            "vendor/bin/phpcs --standard=PSR12 --bootstrap=vendor/autoload.php src",
            "vendor/bin/phpunit"
        ]
    }
}
